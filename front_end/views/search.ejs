<%- include('header') %>

<div class="container py-4">
  <h1 class="text-center mb-4">Search Afghan Proverbs</h1>

  <form method="GET" action="/search" class="mb-4">
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        name="keyword"
        placeholder="Enter a word to search..."
        required
      />
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <% if (typeof proverbs !== 'undefined') { %> <% if (proverbs.length > 0) { %>
  <h4 class="mb-3">Search Results:</h4>
  <ul class="list-group">
    <% proverbs.forEach(function(p) { %>
    <li class="list-group-item">
      <strong>Dari:</strong> <%= p.textDari %><br />
      <strong>Pashto:</strong> <%= p.textPashto %><br />
      <strong>English:</strong> <%= p.translationEn %><br />
      <strong>Meaning:</strong> <%= p.meaning %><br />
      <strong>Category:</strong> <%= p.category %>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p class="text-danger">No proverbs found for that keyword.</p>
  <% } %> <% } %>
</div>

<%- include('footer') %>
