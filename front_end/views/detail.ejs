<%- include('header') %>

<div class="container py-3">
  <h1 class="text-center mb-4">Proverb Details</h1>
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Proverb Details</h2>
    </div>
    <div class="card-body">
      <p><strong>ID:</strong> <%= proverb.id %></p>
      <p><strong>Dari:</strong> <%= proverb.textDari %></p>
      <p><strong>Pashto:</strong> <%= proverb.textPashto %></p>
      <p><strong>English Translation:</strong> <%= proverb.translationEn %></p>
      <p><strong>Meaning:</strong> <%= proverb.meaning %></p>
      <p><strong>Category:</strong> <%= proverb.category %></p>

      <a href="/proverbs/<%= proverb.id %>/edit" class="btn btn-warning me-2"
        >Edit Proverb</a
      >

      <form
        action="/proverbs/<%= proverb.id %>/delete"
        method="post"
        class="d-inline"
        onsubmit="return confirm('Are you sure you want to delete this proverb?');"
      >
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <div class="mt-4">
        <a href="/" class="btn btn-secondary">â¬… Back to All Proverbs</a>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>
